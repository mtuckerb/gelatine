<h1>Listing projects</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Category</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.title %></td>
    <td><%= project.category %></td>
    <td><%= project.description %></td>
    <td class="btn-group"><%= link_to raw('<i class="icon-eye-open icon-white"></i> &nbsp Show '), project, :class => "btn btn-mini" %>
      <%= link_to raw('<i class="icon-pencil icon-white"></i> &nbsp   Edit '), edit_project_path(project), :class => "btn btn-mini" %>
      <%= link_to raw('<i class="icon-trash icon-white"></i> &nbsp Destroy '), project, :class => "btn btn-mini btn-danger ", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

