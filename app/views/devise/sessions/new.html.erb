<div id = "sessions">
	<h2>Sign in</h2>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<table>
		<tr><td><div><%= f.label :email %> </td>
		<td><%= f.email_field :email, :autofocus => true %></td></tr>
		<tr><td><%= f.label :password %> </td><td><%= f.password_field :password %></td></tr>
	</table>

  <% if devise_mapping.rememberable? -%>&nbsp
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" , :class => "sassy_submit" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>