= form_for(@venue) do |f|
  - if @venue.errors.any?
    #error_explanation
      h2
        = pluralize(@venue.errors.count, "error")
        | prohibited this venue from being saved:
      ul
        - @venue.errors.full_messages.each do |msg|
          li= msg
  .field
    = f.label :name
    br
    = f.text_field :name
  .field
    = f.label :open_from
    br
    = f.text_field :open_from
  .field
    = f.label :open_to
    br
    = f.text_field :open_to
  .field
    = f.label :open_days
    br
    = f.text_field :open_days
  .actions
    = f.submit :class => "btn btn-warning"
