<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Operating hours start</th>
    <th>Operating hours stop</th>
    <th>Days of Operation</th>
    <th>Capacity</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.name %></td>
    <td><%= room.ophoursstart %></td>
    <td><%= room.ophoursstop %></td>
    <td><%= room.operating_days %></td>
    <td><%= room.capacity %></td>
    <td><%= room.notes %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<%= paginate @rooms %>
<%= link_to 'New Room', new_room_path %>
